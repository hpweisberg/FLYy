<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
<h1>hello, <%= user ? user.profile.name : "friend" %></h1>
<h1>These are the deets for <%= profile.name %> </h1>
<h1>These are the deets for <%= profile.flights %> </h1>
<a href="/auth/logout" class="logout-btn">
  <button type="submit">Logout</button>
</a>

<h1>Friend Code: <%= profile.friendId %></h1>

<h1>Add a new Journey</h1>

<form action="/profiles/<%= profile._id %>/journeys" id="new-journey" method="POST">
  <label for="journeyDate">Date:</label>
  <input type="date" id="journeyDate" name="journeyDate">

  <label for="journeylPost">Journey Post:</label>
  <input type="string" id="journeylPost" name="journeyPost">

  <button type="submit">Add MyJourney</button>

</form>

<div class="main-journey-container">
  
  <section class="journey-list">
    <h1>myJourney</h1>
  
    <!-- <%# if (profile.journeys.owner.equals(user?.profile._id)) { %> -->
    <% profile.journeys?.forEach(journey => { %>
        <div class="journey-card">
          <a href="/profiles/<%= profile._id %>/journeys/<%= journey._id %> ">
            
            <div class=journey-card-left>
              <p><%= profile.name %> </p>
              <p><%= new Date(journey.journeyDate).toLocaleDateString(undefined, {
                month: "short", day: "numeric"
              }) %> </p>
              <div class="journey-card-right">

                <%= journey.journeyPost %> 
              </div>
              
            </div>
          </a>
        </div>
        <% }) %>
          <!-- <%# } %> -->
          
        

  </section>

  <section class="flight-detail-container">
    <div class="select-flight-to-view-more">
      Please select a Journey to view addtional detials.
    </div>
  </section>
</div>




<%- include('../partials/footer') %>
