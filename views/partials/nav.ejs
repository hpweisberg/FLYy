    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body >
  <nav>
    <!-- <img src="../../assets/back-btn.png" alt=""> -->
    <a href="/">
      <div class="logo-pic" class="">
        <!-- <img src="../../public/assets/flly_logo.png" alt=""> -->
        FLLy</div>
    </a>
      <nav class="primary-header">
        <ul class="nav-list">
          <li><a href="/flights">myFlights</a></li>
          <li><a href="/profiles/<%= user?.profile._id %>/friends">myFriends</a></li>
          <li><a href="/profiles/<%= user?.profile._id %> ">myProfile</a></li>
        </ul>
    </nav>
    <% if (user) { %>
      <a href="/profiles/<%= user.profile._id %>" class="profile-first-name">

        <h1 class="profile-first-name"><%= user ? user.profile.name.split(' ').slice(0, -1) : "";
        %></h1>
      </a>
      <% if (user?.profile.avatar) { %>
        <a href="/profiles/<%= user.profile._id %>">
          <img
          class="profile-pic"
          src="<%= user.profile.avatar %>"
          alt="<%= user.profile.name %> avatar"
          />
        </a>
        <% } %>
    <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    <% } %>
  </nav>
